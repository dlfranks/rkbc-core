@using rkbc.core.models
@using Microsoft.AspNetCore.Identity
@using rkbc.models.extension
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a  class="nav-link text-dark" asp-controller="Administration" asp-action="Details" asp-route-id="@ViewBag.UserSettings.userId"> @User.Identity.Name!</a>
    </li>
    <li>
        <a  asp-controller="Administration" asp-action="Logout">Logout</a>
    </li>
}
else
{
    <li>
        <a asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li>
        <a asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
