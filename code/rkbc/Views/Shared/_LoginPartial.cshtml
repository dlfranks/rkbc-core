@using rkbc.core.models
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IHttpContextAccessor httpContext

@if (User.Identity.IsAuthenticated)

    {
        <li>
            <a class="nav-link text-dark" asp-controller="Administration" asp-action="Edit" asp-route-id="@ViewBag.UserSettings.userId"> @User.Identity.Name!</a>
        </li>
        <li>

            <a  asp-controller="Administration" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li>
            <a asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li>
            <a asp-controller="Administration" asp-action="Login">Login</a>
        </li>
    }
