@using rkbc.core.service
<!DOCTYPE html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!-->
<html class="not-ie" lang="en">
 <!--<![endif]-->
<head>
    <!-- Basic Meta Tags -->
    <meta charset="utf-8">
    <title>RKBC</title>
    <meta name="description" content="ucorpora demo - Free Business Corporate HTML Template">
    <meta name="keywords" content="ucorpora, ucorpora demo, free, template, corporate, clean, modern, bootstrap, creative, design">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--[if (gte IE 9)|!(IE)]>
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    <![endif]-->
    <!-- Favicon -->
    <link href="~/img/favicon.png" rel="icon" type="image/png">

    <!-- Styles -->
    <link href="~/css/styles.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet">
    <link href="~/css/bootstrap-override.css" rel="stylesheet">

    <!-- Font Avesome Styles -->
    <link href="~/css/font-awesome/font-awesome.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/flexslider.css" type="text/css" media="screen">

    <!-- JavaScripts -->
    <script type="text/javascript" src="~/js/jquery-1.8.3.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/js/functions.js"></script>
    <script type="text/javascript" defer src="~/js/jquery.flexslider.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.5.1/knockout-latest.debug.js" asp-append-version="false"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.5.1/knockout-latest.js" asp-append-version="false"></script>

    @RenderSection("Scripts", required: false)
</head>
<body>
    <!-- Header -->
    <header id="header">
        <div class="container">
            <div class="row t-container">

                <!-- Logo -->
                <div class="span3">
                    <div class="logo">
                        <a href="index.htm"><img src="~/img/rkbc/logo-header.png" alt=""></a>

                    </div>
                </div>

                <div class="span9">
                    <div class="row space20"></div>

                    <nav id="nav" role="navigation">
                        <a href="#nav" title="Show navigation">Show navigation</a>
                        <a href="#" title="Hide navigation">Hide navigation</a>

                        <ul class="clearfix">
                            @if (ViewBag.UserSettings != null && ViewBag.UserSettings.isAdmin)
                            {
                                <li class="active">
                                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                                    <ul>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Edit">Edit</a></li>
                                        <li><a class="nav-link text-dark" asp-area="" asp-controller="HomeGallery" asp-action="Edit">Gallery</a></li>
                                    </ul>
                                </li>
                                <li><a href="comming.html" title="">목회자 칼럼</a></li>
                                <li><a href="comming.html" title="">예배 안내</a></li>
                                <li><a href="comming.html" title="">한국학교</a></li>
                                <li><a href="comming.html" title="">Contact</a></li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administration" asp-action="Index">Adminstration</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                </li>
                                <partial name="_LoginPartial" />
                            }
                            else
                            {
                                <li class="active"><a href="index.htm" title="">Home</a></li>
                                <li><a href="comming.html" title="">목회자 칼럼</a></li>
                                <li><a href="comming.html" title="">예배 안내</a></li>
                                <li><a href="comming.html" title="">한국학교</a></li>
                                <li><a href="comming.html" title="">Contact</a></li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Administration" asp-action="Index">Adminstration</a>
                                </li>
                                <li>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Roles" asp-action="Index">Roles</a>
                                </li>
                                <partial name="_LoginPartial" />
                                
                            }

                        </ul>

                    </nav>
                </div>

            </div>
            <div class="row space40"></div>

        </div>
    </header>
    <!-- Header End -->
    <div class="container">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer id="footer">
        <div class="container">
            <div class="inner">
                <h3>Get In Touch</h3>
                <div class="row space30"></div>
                <ul class="actions">
                    <li><i class="icon-phone"></i>+01 919 389 7482</li>
                    <li><i class="icon-envelope"></i><a href="mailto:support@example.com">support@example.com</a></li>
                    <li><i class="icon-home"></i><a href="http://rkbc.us">www.rkbc.us</a></li>
                    <li><i class="icon-facebook"></i><a href="https://www.facebook.com/pg/RaleighKoreanChurch/">Facebook</a></li>
                </ul>
            </div>
            

            <div class="row space50"></div>
            <div class="row">
                <div class="span6">
                    <div class="logo-footer">
                        <a href="http://krbc.us">Raleigh Korean Baptist Church</a>
                    </div>
                </div>
                <div class="span6 right">
                    &copy; 2020. All rights reserved.
                </div>
            </div>

        </div>
    </footer>
    <!-- Footer End -->
    
</body>
</html>
