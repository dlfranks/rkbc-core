    <script src="~/js/knockout.rkbc.js" asp-append-version="false"></script>

    @RenderSection("Scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {
            var actionkey = window.location.pathname.split("/RKBC")[1];
            if (!actionkey) actionkey = "Home/Index";
            // actionkey = window.location.pathname.slice(1);
            var next = actionkey.indexOf('/');
            if (next < 0) next = actionkey.indexOf('\\');
            if (next > 0) { actionkey = actionkey.slice(0, next); }
            var elements = $(".active");
            elements.removeClass("active");
            //$("#" + actionkey).addClass("active");
            //if (!window.location.hash && window.sessionStorage[actionkey]) {
            //    var menu = "#" +
            //        $("#").tabs("select", window.sessionStorage[actionkey]);
            //}

            //TempData messages
            @Html.jsTempDataMessage(false)
        });
    </script>
</head>
<body>
    <!-- Header -->
    <header id="header">
        <div class="container">
            <div class="row t-container">
                
                <!-- Logo -->
                <div class="span3">
                    <div class="logo">
                        <a href="index.htm"><img src="~/img/rkbc/logo-header.png" alt=""></a>

                    </div>
                </div>

                <div class="span9">
                    <div class="row space20"></div>

                    <nav id="nav" role="navigation">
                        <a href="#nav" title="Show navigation">Show navigation</a>
                        <a href="#" title="Hide navigation">Hide navigation</a>

                        <ul class="clearfix">
                            @if (ViewBag.UserSettings.isAdmin)
                            {
                                <li id="Home" class="active">
                                    <a  class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                                    <ul>
                                        <!--Test Id = 3 or 9-->
                                        <li id="HomeEdit"><a class="nav-link text-dark" asp-controller="Home" asp-action="Edit" asp-route-id="@rkbcSetting.Value.HomePageId">Edit</a></li>
                                        <li id="HomeGallery"><a class="nav-link text-dark" asp-controller="Attachment" asp-action="Index">Gallery</a></li>
                                    </ul>
                                </li>
                                <li id="Pastor">
                                    <a asp-controller="Pastor" asp-action="Index" title="">목회자 칼럼</a>
                                    <ul>
                                        <li id="PastorEdit"><a class="nav-link text-dark" asp-controller="Pastor" asp-action="Edit">Edit</a></li>
                                    </ul>
                                </li>
                                <li id="Mission">
                                    <a asp-controller="Mission" asp-action="Index" title="">선교</a>
                                    <ul>
                                        <li id="MissionEdit"><a class="nav-link text-dark" asp-controller="Mission" asp-action="Index">Edit</a></li>
                                    </ul>
                                </li>
                                <li id="School">
                                    <a asp-controller="School" asp-action="Index" title="">한국학교</a>
                                    <ul>
                                        <li id="SchoolEdit"><a class="nav-link text-dark" asp-controller="School" asp-action="Index">Edit</a></li>
                                    </ul>
                                </li>
                                <li id="Contact">
                                    <a asp-controller="Contact" asp-action="Index" title="">Contact</a>
                                    <ul>
                                        <li id="ContactAdministration"><a class="nav-link text-dark" asp-controller="Administration" asp-action="Index">Administration</a></li>
                                        <li id="ContactRoles"><a class="nav-link text-dark" asp-controller="Roles" asp-action="Index">Roles</a></li>
                                        <partial name="_LoginPartial" />
                                    </ul>
                                </li>


                            }
                            else
                            {
                                <li id ="Home" class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
                                <li id="Pastor"><a asp-controller="Pastor" asp-action="Index">목회자 칼럼</a></li>
                                <li id="Mission"><a asp-controller="Mission" asp-action="Index">선교</a></li>
                                <li id="School"><a asp-controller="School" asp-action="Index">한국학교</a></li>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li id="content">
                                        <a asp-controller="Contact" asp-action="Index">Contact</a>
                                        <ul>
                                            <partial name="_LoginPartial" />
                                        </ul>
                                    </li>
                                }
                                else
                                {
                                    <li id="Contact"><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                                    <partial name="_LoginPartial" />
                                }
                            }
                        </ul>
                     </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- Header End -->
    <div class="">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
