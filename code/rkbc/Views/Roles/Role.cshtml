@model rkbc.web.viewmodels.RoleViewModel
@using rkbc.web.viewmodels
@{
    ViewData["Title"] = "Create Role";
}

<h1>CreateRole</h1>

<h4>RoleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@(ViewBag.formViewMode == FormViewMode.Create ? "Create" : "Edit")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="roleId" class="form-control" />
                <label asp-for="roleName" class="control-label"></label>
                <input asp-for="roleName" class="form-control" />
                <span asp-validation-for="roleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@(ViewBag.formViewMode == FormViewMode.Create? "Create":"Edit")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
