@model rkbc.core.models.Contact
<style>
    #contactForm input, #contactForm textarea {
        background-color: #69696926;
    }
</style>
<script>
    $(function () {

    });
</script>
<div class="content" style="margin:0 12px;">


    <div class="container">
        <div class="row space50"></div>
        <div class="row">
            <div class="span6">

                <h3>Contact Form</h3>
                <div id="contactForm">
                   
                    <form class="form-main" name="ajax-form" id="ajax-form" action="#" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="name">Name:</label>
                            <input asp-for="name" id="name" type="text" value="name" onfocus="if(this.value == 'Name') this.value='';" onblur="if(this.value == '') this.value='Name';">
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="email">Email:</label>
                            <input asp-for="email" id="email" type="text" value="email" onfocus="if(this.value == 'E-mail') this.value='';" onblur="if(this.value == '') this.value='E-mail';">
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="subject">Subject:</label>
                            <input asp-for="subject" id="subject" type="text" value="subject" onfocus="if(this.value == 'Subject') this.value='';" onblur="if(this.value == '') this.value='Subject';">
                            <span asp-validation-for="subject" class="text-danger"></span>
                        </div>
                        <div class="error" id="err-message">Please enter message</div>
                        <div class="form-group">
                            <label asp-for="message">Message:</label>
                            <textarea name="message" id="message" onfocus="if(this.value == 'Message') this.value='';" onblur="if(this.value == '') this.value='Message';">Message</textarea><br>
                            <span asp-validation-for="message" class="text-danger"></span>
                        </div>

                        <button asp-action="SendEmail" id="sendEmail" class="btn f-right">Send Message <i class="icon-ok"></i></button>
                    </form>
                </div>
            </div>
            <div class="span6">
                <h3>Address</h3>
                9130 Baileywick Rd<br>
                Raleigh, NC 27615<br>
                United States<br>
                <br>
                <i class="icon-phone"></i>(919) 389-7551<br>
                <i class="icon-envelope"></i>eunyoung2u@hotmail.com<br>
                <i class="icon-home"></i><a href="@Url.Action("Index", "Home")">www.rkbc.us</a>

                <div class="row space40"></div>
                <div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3231.6849296920786!2d-78.65861748438377!3d35.905731525233655!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89ac57fd8396e5d9%3A0xffe957c630da54e4!2s9130%20Baileywick%20Rd%2C%20Raleigh%2C%20NC%2027615!5e0!3m2!1sen!2sus!4v1585338604208!5m2!1sen!2sus" width="460" height="380" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                </div>

            </div>
        </div>

        <div class="row space50"></div>


    </div>
</div>