@model rkbc.core.models.Post
@using rkbc.core.models;
@using rkbc.web.viewcomponents;
<!-- Titlebar
================================================== -->
<section id="titlebar">
    <!-- Container -->
    <div class="container">

        <div class="eight columns">
            <h3 class="left">Blogs</h3>
        </div>

        <div class="eight columns">
            <nav id="breadcrumbs">
                <ul>
                    <li>You are here:</li>
                    <li><a asp-controller="Blog" asp-action="Post" asp-route-id="slug">@Model.slug</a></li>
                    <li>Blogs</li>
                </ul>
            </nav>
        </div>

    </div>
    <!-- Container / End -->
</section>

<!-- Content -->
<div id="content">
    <div class="container">
        <div class="row">
            <div class="span12">
                <h3></h3>
            </div>

            <div class="span9">

                @{await Html.RenderPartialAsync("PostItem.cshtml", Model); }
                @{await Html.RenderPartialAsync("Comment"); }
            </div>
            
            
            <!-- Side Bar -->
            <div class="span3">
                @(await Component.InvokeAsync<BlogSideViewComponent>())

            </div>
        </div>
    </div>
</div>
    <!-- Content End -->
