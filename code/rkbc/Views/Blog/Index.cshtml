@model rkbc.web.viewmodels.PagedResult<rkbc.core.models.Post>
@using rkbc.web.viewcomponents;
@using rkbc.core.models;
    
<!-- Titlebar
================================================== -->
<div class="row space40"></div>
<section id="titlebar">
    <!-- Container -->
    <div class="container">

        <div class="eight columns">
            <h3 class="left">Blogs</h3>
        </div>

        <div class="eight columns">
            <nav id="breadcrumbs">
                <ul>
                    <li>You are here:</li>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li>@ViewBag.title</li>
                </ul>
            </nav>
        </div>

    </div>
    <!-- Container / End -->
</section>

<!-- Content -->
<div id="content">
    <div class="container">
        <div class="row">
            <div class="span12" style="padding: 20px;">
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="" style="float:left;" asp-controller="Blog" asp-action="Edit">New Post</a>
                }

            </div>

            <div class="span9">
                @foreach (var post in Model.Results)
                {
                    await Html.RenderPartialAsync("PostItem.cshtml", post);
                }
               
                <div class="row space30"></div>

                <!-- Paging -->
                @(await Component.InvokeAsync<PagerViewComponent>(Model))

                <!-- Paging End -->


                <div class="row space40"></div>


            </div>
            <div class="span3">
                <!-- Side Bar -->
                @(await Component.InvokeAsync<BlogSideViewComponent>())
                <!--Side Bar End -->


            </div>
        </div>
    </div>
</div>

<!-- Content End -->